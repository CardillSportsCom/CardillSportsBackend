@using PersonalTask.Models
@{
    ViewBag.Title = "Cardill Sports | Home";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
@model List<Article>

<div class="row">
    <div class="col-md-10 col-xs-8" style="padding:0px">
        <div class="articleImage">
            <img class="img-responsive" src="~/Content/images/@Model[0].ImageLink" />
            <div class="col-md-12">
                <div class="caption-bottom col-md-6" style="border-radius:5px;">
                    <div class="col-md-12">
                        <div class="mostRecentArticle" style="padding:20px 20px 20px 20px;">
                            <a href="@Url.Action("ViewArticle","Article", new { articleID = Model[0].ID})" style="color:#FFFFFF"><span style="font-size:31px;"><strong>@Model[0].Name</strong></span></a>
                            <br />
                            <span style="font-size:20px;font-family:Lato;">@Model[0].Owner.firstName.ToUpper() @Model[0].Owner.lastName.ToUpper() | Contributor</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="mostRecentArticles" style="background-color:#111010;border:solid;border-color:#353434;border-width:1px;">
            <br />
            <div class="row">
                @{
                    for (int i = 1; i < Model.Count; i++)
                    {
                        <div class="col-md-3 text-center recentArticles">
                            <div class="thumbnail" style="margin:10px;padding:12px;">
                                <div class="thumbnailInfo">
                                    <img src="~/Content/images/@Model[i].ImageLink" class="img-responsive recentArticleImage" style="height:150px;" />
                                    <br />
                                    <span>@Model[i].Owner.firstName.ToUpper() @Model[i].Owner.lastName.ToUpper() | Contributor</span>
                                    <br />
                                    <span>@Model[i].Name</span>
                                </div>
                                <a href="@Url.Action("ViewArticle", "Article", new { articleID = Model[i].ID })" class="btn readMoreButton"><span>Read More</span></a>
                            </div>
                        </div>
                    }
                }

            </div>
            <br /><br /><br />
            <div class="row">
                <div class="col-md-12">
                    <img src="~/Content/images/copyright.png" class="img-responsive recentArticleImage" />
                    <br />
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-2 col-xs-4" style="padding:0px">
        <iframe src="https://scorestream.com/widgets/scoreboards/vert?userWidgetId=7435" style="padding:0px;border:0px;width:100%;height:800px;" title="Realtime sports scoreboard widget" scrolling="yes" frameborder="0"></iframe>`
    </div>
</div>
