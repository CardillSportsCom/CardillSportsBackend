<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=PT+Serif+Caption" />
    <link href='http://fonts.googleapis.com/css?family=Lato:300' rel='stylesheet' type='text/css' />

</head>
<body style="background-repeat:round;background-size:contain;background-image:url(/Content/images/basketball-transparent-outline-hi.png)">
    <div id="page-wrap">
        <div class="header">
            <nav class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                                <a class="navbar-brand" href="@Url.Action("Index","Home")">
                                    <img src="~/Content/images/logo 6.png" style="height:50px;" />&nbsp;&nbsp;&nbsp;
                                    <span>Cardill Sports</span>
                                </a>
                            </div>
                            <div class="collapse navbar-collapse" id="myNavbar">
                                <ul class="nav navbar-nav navbar-right">
                                    <li><a class="articleTab pull" href="@Url.Action("About","Home")">About</a></li>
                                    <li><a class="articleTab" href="@Url.Action("Articles","Home")">Articles</a></li>
                                    <li><a class="articleTab" href="@Url.Action("Videos","Home")">Videos</a></li>
                                    <li><a class="articleTab" href="@Url.Action("Fantasy","Home")">Fantasy</a></li>
                                    <li><a class="articleTab" href="@Url.Action("Podcasts","Home")">Podcasts</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
        <br />
        <br />
        <br />
        <div class="container" style="margin-top:50px;">
            @RenderBody()
        </div>
        <div class="footer">

        </div>
    </div>
</body>
</html>
